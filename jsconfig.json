{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "src/*": ["/*"],
      "core/*": ["core/*"],
      "store/*": ["renderer/store/*"],
      "App": ["renderer/features/App"],
      "App/*": ["renderer/features/App/*"],
      "Common": ["renderer/features/Common"],
      "Common/*": ["renderer/features/Common/*"],
      "FormComponents": ["renderer/features/FormComponents"],
      "constants": ["renderer/constants"],
      "constants/*": ["renderer/constants/*"],
      "images/*": ["renderer/images/*"],
      "images/icons/*": ["renderer/images/icons/*"],
      "helpers": ["renderer/helpers"],
      "helpers/*": ["renderer/helpers/*"],
      "hooks": ["renderer/hooks"],
      "languages/*": ["renderer/languages/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
